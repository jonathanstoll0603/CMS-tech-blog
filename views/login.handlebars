<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label id="email-val" for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label id="password-val" for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button id="login-btn" class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>If you don't have an account, sign up below for free!</h4>
        <div class="form-group">
        <button id="signup-btn" class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </div>
  </div>

<script src="/public/js/login.js"></script>